{
    "$schema": "../../../system/schema/extend.json",
    "name": "Prism.js Syntax Highlighter",
    "description": "Syntax highlighting for the Web (https://prismjs.com/)",
    "version": "1.0",
    "environment": {
        "system": "^8.0"
    },
    "url": "https://github.com/friends-of-sunlight-cms/",
    "class": "PrismHighlighterPlugin",
    "langs": {
        "prism": "resources/languages/"
    },
    "events.web": [
        {"event": "tpl.head", "method": "onHead"},
        {"event": "bbcode.init.proc", "method": "onBbCode"}
    ]
}